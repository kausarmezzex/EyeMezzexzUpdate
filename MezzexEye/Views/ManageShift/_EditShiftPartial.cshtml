@model EyeMezzexz.Models.Shift
@{
    var countries = ViewData["Countries"] as List<EyeMezzexz.Models.Country>;
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ShiftId" />
    <div class="form-group">
        <label asp-for="ShiftName"></label>
        <input asp-for="ShiftName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FromTime"></label>
        <input asp-for="FromTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ToTime"></label>
        <input asp-for="ToTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label for="countryId">Country</label>
        <select id="countryId" name="countryId" class="form-control">
            @foreach (var country in countries)
            {
                @if (country.Id == Model.CountryId)

                {
                    <option value="@country.Id" selected="selected">@country.Name</option>
                }

                else

                {
                    <option value="@country.Id">@country.Name</option>
                }
            }
        </select>

    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
