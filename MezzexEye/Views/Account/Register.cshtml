@model MezzexEye.ViewModel.RegisterViewModel

@{
    ViewBag.Title = "Register New User";
}

<body class="hold-transition register-page">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="register-box">
            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a href="../../index2.html" class="h1 text-primary text-decoration-none">
                        <span><b>Mezzex</b> STAFF</span>
                    </a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Register a new membership</p>

                    <form asp-action="Register" method="post">
                        <!-- First Name Field -->
                        <div class="input-group mb-3">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name Field -->
                        <div class="input-group mb-3">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="input-group mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="input-group mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="input-group mb-3">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Gender Field -->
                        <div class="input-group mb-3">
                            <select asp-for="Gender" class="form-select">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-venus-mars"></span>
                                </div>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <!-- Active Checkbox -->
                        <div class="form-check mb-3">
                            <input asp-for="Active" type="checkbox" class="form-check-input" id="activeCheck" />
                            <label asp-for="Active" class="form-check-label" for="activeCheck">Active</label>
                            <span asp-validation-for="Active" class="text-danger"></span>
                        </div>

                        <!-- Role Field -->
                        <div class="input-group mb-3">
                            <select asp-for="Role" class="form-select">
                                <option value="Registered">Registered</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-users-cog"></span>
                                </div>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
